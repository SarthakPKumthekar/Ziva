#!/bin/bash

# This script sets up a python virtualenv with everything
# required to run the zBuilder automated tests.
# The virtualenv will be created in ./env2 and any existing
# contents of that directory will be deleted.
# The intention is that this should be run after requrements2.txt changed
# DO NOT run with sudo

rm -R ./env2

echo 'Configuring env2 virtualenv ...'

pip2.7 install --user virtualenv
python2.7 -m virtualenv env2
source ./env2/bin/activate
pip install -r ./requirements2.txt --ignore-installed
deactivate

echo 'Done: configuring env2 virtualenv'
