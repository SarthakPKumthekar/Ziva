#!/bin/bash

# To run use sudo ./configure
# Install virtualenv
# Creates new environmet env2 in the current folder
# Install required libraries from requirements2.txt
# Has to be executed before run_zbuilder_smoke_tests

rm -R ./env2

echo 'Configuring env2 virtualenv ...'

pip2.7 install virtualenv
python2.7 -m virtualenv env2
source ./env2/bin/activate
pip install -r ./requirements2.txt --ignore-installed
deactivate

echo 'Done: configuring env2 virtualenv'
